{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "vibes-database": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@executeautomation/database-server",
        "--postgresql",
        "--host",
        "{env:DB_HOST}",
        "--database",
        "{env:DB_NAME}",
        "--user",
        "{env:DB_USER}",
        "--password",
        "{env:DB_PASSWORD}",
        "--port",
        "{env:DB_PORT}"
      ],
      "enabled": true,
      "environment": {}
    }
  }
}